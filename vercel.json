{
  "version": 2,
  "builds": [
    {
      "src": "client/**",
      "use": "@vercel/static",
      "config": {
        "command": "npm run build"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node",
      "config": {
        "command": "npm start"
      }
    }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "/index.html"
    }
  ]
}
